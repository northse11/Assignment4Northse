<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment4Northse.healthRecPage"
             Title="healthRecPage"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout Padding="20, 20, 20, 20"
                         BackgroundColor="White"
                         Spacing="20">
        <Label Text="Health Recommendations"
               FontSize="Large"
               HorizontalOptions="Center"
               TextColor="Black"/>
        <Border/>
        <Label x:Name="lblStatus"
               FontSize="Medium"
               HorizontalOptions="Center"
               TextColor="Black"/>
        <Label x:Name="lblRecommendation"
               FontSize="Medium"
               HorizontalOptions="Center"
               TextColor="Black"/>
        <Border/>
        <Button x:Name="btnReturn"
                Clicked="btnReturn_Clicked"
                Text="Return To Results"/>
        <Button x:Name="btnHome"
                Clicked="btnHome_Clicked"
                Text="Return To Input"/>
    </VerticalStackLayout>
</ContentPage>